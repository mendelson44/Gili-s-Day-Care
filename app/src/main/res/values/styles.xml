<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/kidGirl</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BottomNavigationTextStyle.Selected">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/kidGirl</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="GreenSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="CustomLoginTheme" parent="FirebaseUI">
        <!-- Primary branding color -->
        <item name="colorPrimary">#BEEBFF</item>
        <!-- Dark variant of the primary color -->
        <item name="colorPrimaryDark">#BEEBFF</item>
        <!-- Accent color -->
        <item name="colorAccent">#E05D5D</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary text color -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Button color -->
        <item name="colorButtonNormal">#E05D5D</item>
        <!-- Control activated color -->
        <item name="colorControlActivated">#E05D5D</item>

    </style>
</resources>