<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_selector</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BottomNavigationTextStyle.Selected">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="GreenSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/red</item>
    </style>
</resources>